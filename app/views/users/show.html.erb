<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center"><%= @user.nickname %></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      <% if @user.id == session[:user_id] %>
        <table class="table table-bordered">
          <tr>
            <th class="text-center">Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th class="text-center">Email</th>
            <td><%= @user.email %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </aside>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li><a href="#"></a>Microposts</li>
      <li><a href="#"></a>Followings</li>
      <li><a href="#"></a>Followers</li>
    </ul>
  </div>
</div>