<% if current_user.adding_to_favorites?(micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type:'submit', class: "btn submit btn btn-primary btn-xs") do %>
     <span class="glyphicon glyphicon-star badge"><%= micropost.added_to_favorites.count %></span> Release Favorites
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type:'submit', class: "btn submit btn btn-primary btn-xs") do %>
     <span class="glyphicon glyphicon-star-empty badge"><%= micropost.added_to_favorites.count %></span> Add to Favorites
    <% end %>
  <% end %>
<% end %>
